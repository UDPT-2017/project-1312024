<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="components/bootstrap/dist/css/bootstrap.css">
  <link rel="stylesheet" href="../public/style.css">
</head>

<body>

  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse" id="main-nav">
      <ul class="nav navbar-nav">
        <li><a href="/hbs">Home</a></li>
        <li class="active"><a href="/players">Players</a></li>
      </ul>
    </div>
  </nav>

  <h1 class="page-header">{{message}}</h1>

  <div class="container">
    <div class="row">
      {{#each images}}
        <div class="col-lg-3 col-md-4 col-xs-6">
          <div class="" style="margin-bottom:15px; border-style:solid; border-color:black">
            <a href="#"><img src="{{this}}" style="width:100%; height:100%" alt=""></a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <script src="components/jquery/dist/jquery.min.js" charset="utf-8"></script>
  <script src="components/bootstrap/dist/js/bootstrap.min.js" charset="utf-8"></script>
</body>

</html>
